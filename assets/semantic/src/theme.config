/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'moto-toolkit';
@reset      : 'moto-toolkit';

/* Elements */
@button     : 'moto-toolkit';
@container  : 'moto-toolkit';
@divider    : 'moto-toolkit';
@flag       : 'moto-toolkit';
@header     : 'moto-toolkit';
@icon       : 'moto-toolkit';
@image      : 'moto-toolkit';
@input      : 'moto-toolkit';
@label      : 'moto-toolkit';
@list       : 'moto-toolkit';
@loader     : 'moto-toolkit';
@rail       : 'moto-toolkit';
@reveal     : 'moto-toolkit';
@segment    : 'moto-toolkit';
@step       : 'moto-toolkit';

/* Collections */
@breadcrumb : 'moto-toolkit';
@form       : 'moto-toolkit';
@grid       : 'moto-toolkit';
@menu       : 'moto-toolkit';
@message    : 'moto-toolkit';
@table      : 'moto-toolkit';

/* Modules */
@accordion  : 'moto-toolkit';
@checkbox   : 'moto-toolkit';
@dimmer     : 'moto-toolkit';
@dropdown   : 'moto-toolkit';
@embed      : 'moto-toolkit';
@modal      : 'moto-toolkit';
@nag        : 'moto-toolkit';
@popup      : 'moto-toolkit';
@progress   : 'moto-toolkit';
@rating     : 'moto-toolkit';
@search     : 'moto-toolkit';
@shape      : 'moto-toolkit';
@sidebar    : 'moto-toolkit';
@sticky     : 'moto-toolkit';
@tab        : 'moto-toolkit';
@transition : 'moto-toolkit';

/* Views */
@ad         : 'moto-toolkit';
@card       : 'moto-toolkit';
@comment    : 'moto-toolkit';
@feed       : 'moto-toolkit';
@item       : 'moto-toolkit';
@statistic  : 'moto-toolkit';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */